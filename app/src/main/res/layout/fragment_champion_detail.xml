<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChampionDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/champion_image"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:contentDescription="Imagen Campeon"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/champion_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.HeadlineMedium"
                tools:text="Champion Name"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:id="@+id/champion_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Champion Title"
                android:layout_marginVertical="16dp"/>

            <TextView
                android:id="@+id/champion_lore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Lore"
                android:layout_marginVertical="16dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>